<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] | Breathtaking Cabin</title>

    <environment include="Development">
        <link rel="stylesheet" href="~/css/fa/css/all.min.css">
        <link rel="stylesheet" href="~/theme/assets/css/bootstrap.min.css">
        <link rel="stylesheet" href="~/theme/assets/css/now-ui-kit.min.css">
        <link rel="stylesheet" href="~/css/site.css">
        <link rel='stylesheet' href='~/gallery/source/unitegallery/css/unite-gallery.css' type='text/css' />
	<link rel='stylesheet' href='~/gallery/source/unitegallery/themes/default/ug-theme-default.css' type='text/css' />
    </environment>
</head>
<body>
<nav class="navbar navbar-expand-lg fixed-top bg-success">
  <div class="container">
    <a class="navbar-brand" asp-action="Index" asp-controller="Home">Breathtaking Cabin</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
     <div class="collapse navbar-collapse" id="navbarNavDropdown">
      <ul class="navbar-nav">
        <li class="nav-item dropdown">
          <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            Menu
          </a>
          <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
            <a class="dropdown-item" asp-action="Index" asp-controller="Home"><i class="far fa-home"></i> Home</a>
            <a class="dropdown-item" asp-action="About" asp-controller="Home"><i class="far fa-info"></i> About</a>
            <a class="dropdown-item" asp-action="Gallery" asp-controller="Home"><i class="fal fa-image"></i> Gallery</a>
            <a class="dropdown-item" asp-action="Reviews" asp-controller="Home"><i class="fal fa-comment-dots"></i> Reviews</a>
            <a class="dropdown-item" asp-action="Map" asp-controller="Home"><i class="fal fa-map-marked-alt"></i> Map</a>
            <a class="dropdown-item" asp-action="Calendar" asp-controller="Home"><i class="fal fa-calendar"></i> Calendar</a>
            <a class="dropdown-item" asp-action="Resources" asp-controller="Home"><i class="fal fa-project-diagram"></i> Resources</a>
            <a class="dropdown-item" asp-action="Contact" asp-controller="Home"><i class="fal fa-file-signature"></i> Contact</a>
          </div>
        </li>
      </ul>
      <ul class="navbar-nav ml-auto">
          @if(ViewBag.user == null)
        {
          <li class="nav-item">
              <a class="nav-link" asp-action="Login" asp-controller="Home">Login</a>
           </li>
          <li class="nav-item">
              <a class="nav-link" asp-action="Register" asp-controller="Home">Register</a>
           </li>
        }
        else
        {
            <li class="nav-item first-name-container">
                <a href="#" class="nav-link first-name">@ViewBag.user.first_name</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" asp-action="Logout" asp-controller="Home">Logout</a>
           </li>
        }
      </ul>
    </div>
  </div>
</nav>
        @RenderBody()
